<Window x:Class="Timer_pop_up.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer_pop_up"
        mc:Ignorable="d"
        Title="Timer Loop WPF App" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="timer1TextBlock" FontSize="20" Margin="0 0 0 10" />
            <TextBlock x:Name="timer2TextBlock" FontSize="20" Margin="0 0 0 10" />
            <Button Content="Start Timers" Click="StartTimers_Click" />
        </StackPanel>
    </Grid>
</Window>

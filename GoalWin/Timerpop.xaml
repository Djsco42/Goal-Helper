<Window x:Name="tim" x:Class="Timer_pop_up.Timerpop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer_pop_up"
        mc:Ignorable="d"
        Title="Timer Loop WPF App" Height="200" Width="300" Loaded="tim_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="T1" FontSize="20" Margin="0 0 0 10" />
            <TextBlock x:Name="T2" FontSize="20" Margin="0 0 0 10" />
            <Button Content="Start Timers" Click="StartTimers_Click" />
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="10,150,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" x:Name="pepe"/>
    </Grid>
</Window>
